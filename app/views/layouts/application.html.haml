!!!
%html
  %head
    %title 
    = stylesheet_link_tag :application, :media => "all" 
    = javascript_include_tag :application
    = csrf_meta_tags
  %body
    %div.navbar.navbar-fixed-top      
      %div.navbar-inner
        %div.container
          %a.brand{:href=>"#"}Title
          %ul.nav
            %li= link_to 'Home', root_path
    %div.container
      - if notice
        %div.alert.alert-success      
          %p.notice= notice
      - if alert
        %div.alert-error      
          %p= alert
      = yield