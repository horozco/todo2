!!!
%html
  %head
    %title 
    = stylesheet_link_tag :application, :media => "all" 
    = javascript_include_tag :application
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %title jQuery UI Datepicker - Default functionality
    %link{:href => "http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css", :rel => "stylesheet"}/
    %script{:src => "http://code.jquery.com/ui/1.9.2/jquery-ui.js"}
    %link{:href => "/resources/demos/style.css", :rel => "stylesheet"}/
    :javascript
      $(function() {
          $( "#datepicker" ).datepicker();
      
          $( "#accordion" ).accordion({
              heightStyle: "content"
          });
      });
    
  %body
    %div.navbar.navbar-fixed-top      
      %div.navbar-inner
        %div.container
          %a.brand{:href=>"#"}ToDo Project
          %ul.nav
            %li= link_to 'Home', root_path
            - if user_signed_in?
              %li= link_to 'My Lists', lists_path
          %ul.nav.pull-right
            - if user_signed_in?
              %li= link_to current_user.full_name,"#"
              = link_to(content_tag(:span, content_tag(:i, nil, :class => "icon-chevron-down")),"#", method: :delete, :class => "btn dropdown-toggle", :"data-toggle" => "dropdown")
              %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                %li= link_to "Log Out", destroy_user_session_path,  method: :delete
            - else
              %li= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook)
    %div.container
      - if notice
        %div.alert.alert-success    
          %button.close{"data-dismiss" => "alert", :type => "button"} x  
          %p.notice= notice
      - if alert
        %div.alert-error      
          %button.close{"data-dismiss" => "alert", :type => "button"} x 
          %p= alert
      = yield
    %footer.navbar.navbar-fixed-bottom
      .navbar-inner
        .container
          %a.brand{:href => "http://www.koombea.com"} &copy; Koombea 2012