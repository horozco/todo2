%blockquote
  %div.well1
    %h1 My Lists
    %a.btn.btn-primary{"data-toggle" => "modal", :href => "#myModal", :role => "button"} New List
%div.span6
  %div#accordion
    - Category.order("name_category").each do |cat|
      %h3
        = cat.name_category
      %div
        - @user.lists.each do |list|  
          - if list.category_id == cat.id
            %div.well1{"data-content" => "#{list.description}", "data-original-title" => "Description", "data-placement" => "right", :href => "#", :rel => "popover"}
              %div#lista      
                %li 
                  %h5= link_to list.title.capitalize, list
                  .btn-toolbar
                    .btn-group
                      = link_to(content_tag(:span, content_tag(:i, nil, :class => "icon-eye-open")),list, :class => "btn")
                      = link_to(content_tag(:span, content_tag(:i, nil, :class => "icon-remove")),list, method: :delete, data: { confirm: "Are you sure you want to delete this list?"}, :class => "btn")
%script
  $(function ()  
  { $(".well1").popover({trigger: 'hover'});  
  });

#myModal.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %h3#myModalLabel New List
  .modal-body
    = render partial: "form", locals: {:list => List.new}