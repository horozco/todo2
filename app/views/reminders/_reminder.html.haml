- @task=Task.first
= simple_form_for([@task, @task.reminders.build]) do |f|
  - if reminder.errors.any?
    #error_explanation
      %h2
        = pluralize(reminder.errors.count, "error")
        prohibited this reminder from being saved:
      %ul
        - reminder.errors.full_messages.each do |msg|
          %li= msg
  = f.input :date_time,:value=> Time.now, :input_html => {:style=> 'width: 60px'}
  - p "TIEMPOOOOOOO  #{Time.now}"
  .form-actions
    = f.button :submit, class: "btn btn-primary"
