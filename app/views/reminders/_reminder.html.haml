- @task=Task.first
= simple_form_for([@task, @task.build_reminder]) do |f|
  - if reminder.errors.any?
    #error_explanation
      %h2
        = pluralize(reminder.errors.count, "error")
        prohibited this reminder from being saved:
      %ul
        - reminder.errors.full_messages.each do |msg|
          %li= msg
  = f.input :date, :input_html => { :size => 20, :id => "datepicker" }
  = f.time_select :time, :ignore_date => true, :input_html => { :width=> 10 }

  .form-actions
    = f.button :submit, class: "btn btn-primary"